doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='The Human Kindness is a band of kind Humans from Michigan. Alternative and experimental rock and pop music.')
        meta(name='author', content='The Human Kindness')

        title The Human Kindness | A band of kind Humans from Michigan

        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        // Font Awesome icons (free version)
        script(src='https://use.fontawesome.com/releases/v5.15.4/js/all.js', crossorigin='anonymous')

        // Google fonts
        link(rel='preconnect', href='https://fonts.gstatic.com')
        link(href='https://fonts.googleapis.com/css2?family=Tinos:ital,wght@0,400;0,700;1,400;1,700&display=swap' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap' rel='stylesheet')


        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css', rel='stylesheet')

        <!-- Global site tag (gtag.js) - Google Analytics -->
        script(async src="https://www.googletagmanager.com/gtag/js?id=UA-223984465-1")
        script.
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'UA-223984465-1');

    body

        // Background Video
        video.bg-video(playsinline='playsinline', autoplay='autoplay', muted='muted', loop='loop')
            source(src='assets/mp4/The Human Kindness (feat. Sarah Keen) LOOP_NOIR.mp4', type='video/mp4')
            //- source(src='assets/mp4/The Human Kindness (feat. Sarah Keen) LOOP_NOIR.mp4', type='video/mp4')
            //- source(src='assets/mp4/bg.mp4', type='video/mp4')

        // Masthead
        .masthead
            .masthead-content.text-white
                .masthead-inner.container-fluid.px-4.px-lg-0
                    h1.lh-1 The Human Kindness
                    h2.fst-italic.lh-1 Under Construction
                    p
                        | We're working hard to finish the development of this site. Sign up below to receive updates and to be notified when we launch!
                    p
                        | We are a band of kind Humans from Michigan.
                    p
                        | Tyler Kuiper, Christopher Morse, Steve Sullivan, Michael Constantine

                    //- Get it? socialist? socialList? /shrug
                    -
                        var socialList = {
                            'youtube': '//www.youtube.com/channel/UCKXwhlVT2ENyhDoy6Uuk--w',
                            'instagram': '//instagram.com/the_human_kindness',
                            'facebook': '//www.facebook.com/humankindnessmusic',
                            'contact': 'mailto:contact@thehumankindnessmusic.com'
                        }

                    ul
                        each val, key in socialList
                            li.
                                #[a(href=val) #{key.toUpperCase()}]

                    // * * * * * * * * * * * * * * *
                    // * * 99inbound Contact Form * *
                    // * * * * * iFrame Embed * * * *
                    // * * * * * * * * * * * * * * *
                    //- div(
                    //-     class="inbound-form-wrapper"
                    //-     id="form_6662"
                    //-     data-path="https://app.99inbound.com/i/ca23c838-c271-4297-9591-5cea4c844424"
                    //-     data-token="RXkIHZnVP2XSapx9dNX31wtt"
                    //- )

                    // * * * * * * * * * * * * * * *
                    // * * 99inbound Contact Form * *
                    // * * * * Direct Link * * * * * *
                    // * * * * * * * * * * * * * * *
                    form(action='https://app.99inbound.com/api/e/s2sa8qcq', method='POST', target='_blank')
                        h2 The Human Kindness Newsletter

                        label(for='fname') First Name
                        input(type='text', name='fname', placeholder='first name', required)

                        label(for='lname') Last Name
                        input(type='text', name='lname', placeholder='last name', required)

                        label(for='email') Email
                        input(type='email', name='email', placeholder='email', required)

                        button(type="submit") Notify Me!

                        div(style='position: absolute; left: -5000px;')
                            input(type='checkbox', name='soft_chocolate_paisley_mission', value='1', tabindex='-1', autocomplete='no')

        // Social Icons
        // For more icon options, visit https://fontawesome.com/icons?d=gallery&p=2&s=brands
        .social-icons
            .d-flex.flex-row.flex-lg-column.justify-content-center.align-items-center.h-100.mt-3.mt-lg-0
                a.btn.btn-dark.m-3(href='https://www.youtube.com/channel/UCKXwhlVT2ENyhDoy6Uuk--w')
                    i.fab.fa-youtube
                a.btn.btn-dark.m-3(href='https://www.instagram.com/the_human_kindness/')
                    i.fab.fa-instagram
                a.btn.btn-dark.m-3(href='https://www.facebook.com/humankindnessmusic')
                    i.fab.fa-facebook-f

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')

